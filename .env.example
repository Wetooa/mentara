# Mentara Platform - Environment Configuration Template
# Copy this file to .env and configure with your values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_PASSWORD=your_secure_database_password_here
POSTGRES_USER=mentara_admin
POSTGRES_PASSWORD=${DB_PASSWORD}
DATABASE_URL=postgresql://${POSTGRES_USER}:${DB_PASSWORD}@localhost:5432/mentara_db

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# ==============================================
# JWT & AUTHENTICATION
# ==============================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_for_sensitive_data

# ==============================================
# OAUTH AUTHENTICATION
# ==============================================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_from_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console  
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Microsoft OAuth Configuration  
MICROSOFT_CLIENT_ID=your_microsoft_client_id_from_azure
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_from_azure
MICROSOFT_CALLBACK_URL=http://localhost:3001/auth/microsoft/callback

# ==============================================
# AI SERVICES CONFIGURATION
# ==============================================
AI_API_KEY=your_ai_service_api_key_here
MENTARA_AI_API_KEY=${AI_API_KEY}

# Ollama Configuration (AI Content Moderation)
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=mxbai-embed-large

# Content Moderation Thresholds
TOXICITY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8
MENTAL_HEALTH_THRESHOLD=0.6

# ==============================================
# MONITORING & LOGGING
# ==============================================
GRAFANA_PASSWORD=your_grafana_admin_password_here
PROMETHEUS_RETENTION=15d

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Email Service (if using external email provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password_or_app_password

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=mentara-uploads

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
NODE_ENV=production
FLASK_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:5000

# ==============================================
# SECURITY SETTINGS
# ==============================================
# CORS Origins (comma-separated for multiple domains)
CORS_ORIGINS=http://localhost:3000,https://mentara.com,https://app.mentara.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Session Settings
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5

# ==============================================
# HIPAA COMPLIANCE SETTINGS
# ==============================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as required by HIPAA
DATA_ENCRYPTION_AT_REST=true
BACKUP_ENCRYPTION_ENABLED=true
ACCESS_LOG_ENABLED=true

# ==============================================
# DEVELOPMENT SETTINGS (Only for development)
# ==============================================
# Uncomment for development environment
# NODE_ENV=development
# FLASK_ENV=development
# FLASK_DEBUG=true
# LOG_LEVEL=DEBUG

# ==============================================
# OPTIONAL INTEGRATIONS
# ==============================================
# Stripe Payment Processing
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Twilio SMS/Voice Services
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# PERFORMANCE TUNING
# ==============================================
# API Service
API_WORKERS=4
API_MAX_CONNECTIONS=1000
API_TIMEOUT=30

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=5000

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Specific service log levels
API_LOG_LEVEL=INFO
AI_LOG_LEVEL=INFO
FRONTEND_LOG_LEVEL=WARN

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_CONTENT_MODERATION=true
ENABLE_VIDEO_CALLS=true
ENABLE_FILE_UPLOADS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# ==============================================
# MAINTENANCE MODE
# ==============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Mentara is currently undergoing maintenance. Please try again later."

# ==============================================
# NOTES
# ==============================================
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate secrets and API keys
# 4. Ensure all secrets are at least 32 characters long
# 5. Use environment-specific values for different deployments
# 6. Enable all HIPAA compliance settings for production
# 7. Set NODE_ENV and FLASK_ENV to 'production' for production deployments