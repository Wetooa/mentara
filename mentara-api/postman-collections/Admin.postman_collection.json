                  "});",
                  "",
                  "pm.test('Error message mentions date', function () {",
                  "    const responseJson = pm.response.json();",
                  "    const message = (responseJson.message || responseJson.error || '').toLowerCase();",
                  "    pm.expect(message).to.include('date');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
