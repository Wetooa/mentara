    {
      "name": "Error Handling & Validation",
      "description": "Test endpoints for validation and error scenarios",
      "item": [
        {
          "name": "Access Admin Endpoint Without Admin Role",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 403 for non-admin user', function () {",
                  "    pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test('Error message mentions admin access', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.message.toLowerCase()).to.include('admin');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{clientAccessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/overview",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "overview"]
            },
            "description": "Test admin access control with non-admin user token (should return 403)."
          },
          "response": []
        },
        {
          "name": "Invalid User ID Format",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 400 for invalid UUID', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Error indicates validation issue', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.message || responseJson.error).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users/invalid-uuid-format",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", "invalid-uuid-format"]
            },
            "description": "Test validation for invalid UUID format in user ID parameter."
          },
          "response": []
        },
        {
          "name": "Invalid Date Range in Analytics",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Returns 400 for invalid date range', function () {",
