              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users/{{userId}}/unsuspend",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", "{{userId}}", "unsuspend"]
            },
            "description": "Remove suspension from a user account. Admin access required."
          },
          "response": []
        }
      ]
