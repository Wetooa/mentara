{
  "name": "mentara-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mentara-client",
    "mentara-api", 
    "mentara-commons"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:commons": "npm run build --workspace=mentara-commons",
    "build:client": "npm run build --workspace=mentara-client",
    "build:api": "npm run build --workspace=mentara-api",
    "dev:commons": "npm run dev --workspace=mentara-commons",
    "dev:client": "npm run dev --workspace=mentara-client",
    "dev:api": "npm run start:dev --workspace=mentara-api",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf */node_modules */dist */.next",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}