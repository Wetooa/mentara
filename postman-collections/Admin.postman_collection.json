  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Ensure admin token is set",
          "if (pm.environment.get('accessToken') && !pm.request.headers.has('Authorization')) {",
          "    pm.request.headers.add({",
          "        key: 'Authorization',",
          "        value: 'Bearer ' + pm.environment.get('accessToken')",
          "    });",
          "}",
          "",
          "// Check if user role is admin",
          "if (pm.environment.get('userRole') !== 'admin') {",
          "    console.warn('⚠️ Admin role required for these endpoints');",
          "}",
          "",
          "// Ensure test environment has valid UUIDs",
          "if (!pm.environment.get('adminId') || !pm.environment.get('adminId').match(/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i)) {",
          "    pm.environment.set('adminId', '123e4567-e89b-12d3-a456-426614174000');",
          "    console.log('⚠️ Set default UUID for adminId');",
          "}",
          "",
          "if (!pm.environment.get('userId') || !pm.environment.get('userId').match(/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i)) {",
          "    pm.environment.set('userId', '987fcdeb-51a2-43d7-8ace-123456789012');",
          "    console.log('⚠️ Set default UUID for userId');",
          "}",
          "",
          "if (!pm.environment.get('therapistId') || !pm.environment.get('therapistId').match(/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i)) {",
          "    pm.environment.set('therapistId', 'abcd1234-5678-90ef-ghij-klmnopqrstuv');",
          "    console.log('⚠️ Set default UUID for therapistId');",
          "}",
          "",
          "if (!pm.environment.get('therapistApplicationId') || !pm.environment.get('therapistApplicationId').match(/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i)) {",
          "    pm.environment.set('therapistApplicationId', 'def45678-9012-34gh-ijkl-mnopqrstuvwx');",
          "    console.log('⚠️ Set default UUID for therapistApplicationId');",
          "}",
          "",
          "if (!pm.environment.get('contentId') || !pm.environment.get('contentId').match(/^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i)) {",
          "    pm.environment.set('contentId', 'fed34567-8901-23ef-ghij-klmnopqrstuv');",
          "    console.log('⚠️ Set default UUID for contentId');",
          "}",
          "",
          "// Set date parameters",
          "const now = new Date();",
          "const sevenDaysAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);",
          "const thirtyDaysAgo = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);",
          "pm.environment.set('currentDate', now.toISOString().split('T')[0]);",
          "pm.environment.set('weekAgoDate', sevenDaysAgo.toISOString().split('T')[0]);",
          "pm.environment.set('monthAgoDate', thirtyDaysAgo.toISOString().split('T')[0]);",
          "pm.environment.set('currentYear', now.getFullYear().toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global error handling for all requests",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Auto-handle Zod validation errors",
          "if (pm.response.code === 400) {",
          "    try {",
          "        const responseJson = pm.response.json();",
          "        if (responseJson.issues && Array.isArray(responseJson.issues)) {",
          "            responseJson.issues.forEach(issue => {",
          "                console.error(`\u274C Validation Error: ${issue.message} (${issue.path ? issue.path.join('.') : 'general'})`);",
          "            });",
          "        }",
          "    } catch (e) {",
          "        console.error('\u274C Failed to parse validation error response');",
          "    }",
          "}",
          "",
          "// Handle authentication errors",
          "if (pm.response.code === 401) {",
          "    console.error('\u274C Authentication failed - check access token and admin role');",
          "}",
          "",
          "// Handle permission errors",
          "if (pm.response.code === 403) {",
          "    console.error('\u274C Insufficient permissions - admin role required');",
          "}",
          "",
          "// Handle not found errors",
          "if (pm.response.code === 404) {",
          "    console.error('\u274C Resource not found - check ID parameters');",
          "}",
          "",
          "// Handle service unavailability",
          "if (pm.response.code === 503) {",
          "    console.error('\u274C Service unavailable - check system health');",
          "}",
          "",
          "// Auto-save relevant data from successful responses",
          "if (pm.response.code === 200 || pm.response.code === 201) {",
          "    const responseJson = pm.response.json();",
          "    ",
          "    // Save user IDs",
          "    if (responseJson.id) {",
          "        pm.environment.set('userId', responseJson.id);",
          "    }",
          "    ",
          "    // Save therapist application IDs",
          "    if (responseJson.applications && responseJson.applications.length > 0) {",
          "        pm.environment.set('therapistApplicationId', responseJson.applications[0].id);",
          "    }",
          "    ",
          "    // Save content IDs",
          "    if (responseJson.flaggedContent && responseJson.flaggedContent.length > 0) {",
          "        pm.environment.set('contentId', responseJson.flaggedContent[0].id);",
          "    }",
          "}"
        ]
      }
    }
  ],
