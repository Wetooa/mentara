            },
            "url": {
              "raw": "{{baseUrl}}/auth/force-logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "force-logout"]
            },
            "description": "Force logout a specific user (admin only)"
          },
          "response": []
        }
      ]
    }
  ]
}