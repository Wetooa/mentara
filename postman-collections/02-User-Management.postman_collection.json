            "url": {
              "raw": "{{baseUrl}}/users/{{targetUserId}}/reactivate",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{targetUserId}}", "reactivate"]
            },
            "description": "Admin reactivate a deactivated user account"
          },
          "response": []
        }
      ]
    },
