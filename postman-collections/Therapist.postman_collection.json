{
  "info": {
    "name": "Mentara - Therapist",
    "description": "Comprehensive therapist API endpoints for profile management, client relationships, request handling, worksheet management, and recommendations. Includes both public registration endpoints and protected therapist-only functionality.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "therapist-collection-v2"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Ensure therapist authentication token is set",
          "if (!pm.environment.get('accessToken')) {",
          "    console.warn('⚠️ Therapist access token not set in environment');",
          "}",
          "",
          "// Verify therapist role if available",
          "const userRole = pm.environment.get('userRole');",
          "if (userRole && userRole !== 'therapist' && userRole !== 'admin') {",
          "    console.warn('⚠️ Therapist role required for protected endpoints - current role:', userRole);",
          "}",
          "",
          "// Ensure required UUIDs are valid",
          "const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;",
          "",
          "if (!pm.environment.get('therapistId') || !uuidRegex.test(pm.environment.get('therapistId'))) {",
          "    pm.environment.set('therapistId', '987fcdeb-51a2-43d7-8ace-123456789012');",
          "}",
          "",
          "if (!pm.environment.get('clientId') || !uuidRegex.test(pm.environment.get('clientId'))) {",
          "    pm.environment.set('clientId', '123e4567-e89b-12d3-a456-426614174000');",
          "}",
          "",
          "if (!pm.environment.get('requestId') || !uuidRegex.test(pm.environment.get('requestId'))) {",
          "    pm.environment.set('requestId', 'req12345-6789-abcd-efgh-ijklmnopqrst');",
          "}",
          "",
          "if (!pm.environment.get('worksheetId') || !uuidRegex.test(pm.environment.get('worksheetId'))) {",
          "    pm.environment.set('worksheetId', 'wks98765-4321-fedc-ba09-876543210fed');",
          "}",
          "",
          "if (!pm.environment.get('applicationId') || !uuidRegex.test(pm.environment.get('applicationId'))) {",
          "    pm.environment.set('applicationId', 'app12345-6789-abcd-efgh-ijklmnopqrst');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Common test for response time",
          "pm.test('Response time is under 3 seconds', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(3000);",
          "});",
          "",
          "// Handle common therapist endpoint errors",
          "if (pm.response.code === 401) {",
          "    console.error('❌ Authentication failed - check therapist access token');",
          "}",
          "",
          "if (pm.response.code === 403) {",
          "    console.error('❌ Insufficient permissions - therapist role required');",
          "}",
          "",
          "if (pm.response.code === 404) {",
          "    console.error('❌ Resource not found - check entity IDs');",
          "}",
          "",
          "// Auto-save useful data from successful responses",
          "if (pm.response.code >= 200 && pm.response.code < 300) {",
          "    try {",
          "        const responseJson = pm.response.json();",
          "        ",
          "        // Save client request IDs from request lists",
          "        if (responseJson.requests && Array.isArray(responseJson.requests) && responseJson.requests.length > 0) {",
          "            pm.environment.set('requestId', responseJson.requests[0].id);",
          "        }",
          "        ",
          "        // Save client IDs from client lists",
          "        if (responseJson.clients && Array.isArray(responseJson.clients) && responseJson.clients.length > 0) {",
          "            pm.environment.set('clientId', responseJson.clients[0].id);",
          "        }",
          "        ",
          "        // Save worksheet IDs from worksheet lists",
          "        if (responseJson.worksheets && Array.isArray(responseJson.worksheets) && responseJson.worksheets.length > 0) {",
          "            pm.environment.set('worksheetId', responseJson.worksheets[0].id);",
          "        }",
          "        ",
          "        // Save authentication tokens",
          "        if (responseJson.accessToken) {",
          "            pm.environment.set('accessToken', responseJson.accessToken);",
          "        }",
          "        ",
          "        // Save application IDs from application lists",
          "        if (responseJson.applications && Array.isArray(responseJson.applications) && responseJson.applications.length > 0) {",
          "            pm.environment.set('applicationId', responseJson.applications[0].id);",
          "        }",
          "        ",
          "        // Save application ID from single application response",
          "        if (responseJson.id && responseJson.status) {",
          "            pm.environment.set('applicationId', responseJson.id);",
          "        }",
          "    } catch (e) {",
          "        // Silent fail for non-JSON responses",
          "    }",
          "}"
        ]
      }
    }
  ],
