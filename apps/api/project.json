{
    "name": "mentara-api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/api/src",
    "tags": [
        "type:app",
        "scope:api"
    ],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "outputs": [
                "{projectRoot}/dist"
            ],
            "options": {
                "command": "nest build",
                "cwd": "apps/api"
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "nest start --watch",
                "cwd": "apps/api"
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node -r tsconfig-paths/register dist/src/main.js",
                "cwd": "apps/api"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "jest",
                "cwd": "apps/api"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
                "cwd": "apps/api"
            }
        },
        "prisma:migrate": {
            "executor": "nx:run-commands",
            "options": {
                "command": "prisma migrate dev",
                "cwd": "apps/api"
            }
        },
        "prisma:generate": {
            "executor": "nx:run-commands",
            "options": {
                "command": "prisma generate",
                "cwd": "apps/api"
            }
        },
        "prisma:seed": {
            "executor": "nx:run-commands",
            "options": {
                "command": "ts-node prisma/seed.ts",
                "cwd": "apps/api"
            }
        },
        "prisma:push": {
            "executor": "nx:run-commands",
            "options": {
                "command": "prisma db push",
                "cwd": "apps/api"
            }
        }
    }
}