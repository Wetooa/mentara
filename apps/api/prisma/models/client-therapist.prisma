model ClientTherapist {
  id         String   @id @default(uuid())
  clientId   String
  therapistId String
  status     String   @default("active")
  assignedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
  client     Client   @relation("ClientAssignedTherapists", fields: [clientId], references: [userId], onDelete: Cascade)
  therapist  Therapist @relation("TherapistAssignedClients", fields: [therapistId], references: [userId], onDelete: Cascade)

  @@index([clientId])
  @@index([therapistId])
}
