{
    "name": "mentara-web",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/web/app",
    "tags": [
        "type:app",
        "scope:web"
    ],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "next build",
                "cwd": "apps/web"
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "next dev",
                "cwd": "apps/web"
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "command": "next start",
                "cwd": "apps/web"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "next lint",
                "cwd": "apps/web"
            }
        },
        "test:e2e": {
            "executor": "nx:run-commands",
            "options": {
                "command": "playwright test",
                "cwd": "apps/web"
            }
        }
    }
}